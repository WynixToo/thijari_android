        <ImageView
            android:id="@+id/myQTopSeperate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/arrow_queue" />

        <TextView
            android:id="@+id/myQTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/myQTopSeperate"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/myq"
            android:textColor="@color/q_lbl"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:id="@+id/myQDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myQTitle"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center"
            android:paddingLeft="@dimen/_40sdp"
            android:paddingRight="@dimen/_40sdp"
            android:text="@string/myQueu_Description"
            android:textSize="@dimen/_14sdp" />

