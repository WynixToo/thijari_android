        <TextView
            android:id="@+id/queueSelectBranch"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myQDescription"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableTop="@drawable/select_branch"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/_20sdp"
            android:text="@string/myQueue_SelectBranch"
            android:textSize="@dimen/_12sdp"
            app:layout_widthPercent="33%" />

        <TextView
            android:id="@+id/queueCheckIn"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myQDescription"
            android:layout_toRightOf="@id/queueSelectBranch"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableTop="@drawable/check_in"
            android:gravity="center_horizontal"
            android:text="@string/myQueue_CheckIn"
            android:textSize="@dimen/_12sdp"
            app:layout_widthPercent="33%" />

        <TextView
            android:id="@+id/queueTutorial"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myQDescription"
            android:layout_toRightOf="@id/queueCheckIn"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableTop="@drawable/tut_button"
            android:gravity="center_horizontal"
            android:paddingRight="@dimen/_20sdp"
            android:text="@string/myQueue_Tutorial"
            android:textSize="@dimen/_12sdp"
            app:layout_widthPercent="33%" />


        <View
            android:id="@+id/overlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/black_20"
            android:gravity="center"
            android:visibility="gone"></View>

        <TextView
            android:id="@+id/step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/queueSelectBranch"
            android:layout_alignTop="@id/queueSelectBranch"
            android:layout_marginLeft="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_minus10sdp"
            android:background="@drawable/step_round_bg"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/step1Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/step1"
            android:layout_alignLeft="@id/step1"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/step_descrip_bg"
            android:text="@string/myQueue_step1_description"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/step2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/queueCheckIn"
            android:layout_alignRight="@id/queueCheckIn"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/step_round_bg"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:visibility="gone" />


        <TextView
            android:id="@+id/step2Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/step2"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_minus10sdp"
            android:background="@drawable/step_descrip_bg"
            android:text="@string/myQueue_step1_description"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/closeTutorialTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/step2Description"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/round_button_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_25sdp"
            android:paddingRight="@dimen/_25sdp"
            android:paddingTop="@dimen/_10sdp"
            android:text="@string/selesai"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="gone" />

